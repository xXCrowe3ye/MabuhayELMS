<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/activity_new_homework" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="1">
        <TextView android:textSize="24sp" android:gravity="center" android:id="@+id/textView7" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:text="Create a Homework"/>
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/colorPrimaryDark" android:id="@+id/textView6" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:text="Class" android:fontFamily="serif-monospace"/>
        <Spinner android:id="@+id/spClass" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp"/>
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/colorPrimaryDark" android:id="@+id/Instructions" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:text="Instructions" android:fontFamily="serif-monospace"/>
        <EditText android:id="@+id/etInstruct" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:ems="10" android:inputType="textMultiLine"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="@color/colorPrimaryDark" android:id="@+id/textView8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="Attachment: " android:fontFamily="serif-monospace"/>
            <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/colorPrimaryDark" android:id="@+id/tvAttach" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TextView" android:layout_weight="1" android:fontFamily="serif-monospace"/>
            <Button android:textSize="11sp" android:textColor="#000000" android:id="@+id/btnAttach" android:background="@drawable/positive" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="attachment"/>
        </LinearLayout>
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/colorPrimaryDark" android:id="@+id/DueDate" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:text="Due Date" android:fontFamily="serif-monospace"/>
        <EditText android:id="@+id/etDue" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:ems="10" android:inputType="date"/>
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/colorPrimaryDark" android:id="@+id/textView10" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:text="Due Time" android:fontFamily="serif-monospace"/>
        <EditText android:id="@+id/etDuet" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:ems="10" android:inputType="time"/>
        <Button android:id="@+id/btnSubmit" android:background="@drawable/radius" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Submit" android:onClick="process6"/>
    </LinearLayout>
</FrameLayout>
